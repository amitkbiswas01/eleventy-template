{
    "mount": {
        "dist": "/"
    },
    "plugins": [
        "@snowpack/plugin-postcss",
        [
            "@snowpack/plugin-run-script",
            {
                "cmd": "eleventy",
                "watch": "$1 --watch"
            }
        ]
    ],
    "installOptions": {
        "NODE_ENV": true
    },
    "buildOptions": {
        "clean": true,
        "out": "dist"
    },
    "devOptions": {
        "hmrDelay": 300,
        "open": "none"
    }
}
